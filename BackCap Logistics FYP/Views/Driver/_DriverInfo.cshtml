@model List<Driver>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <style>
        .container {
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-x: auto;
        }

        h1 {
            text-align: center;
            margin: 0 0 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
            text-transform: uppercase;
        }

        .container-capacity {
            font-size: 14px;
        }

        .button-column {
            width: 150px;
            text-align: center;
        }

        .button {
            padding: 8px 12px;
            margin-right: 5px;
            border: none;
            cursor: pointer;
            border-radius: 3px;
            transition: background-color 0.3s;
        }

        .map-button {
            background-color: #4CAF50;
            color: white;
        }

        .update-button {
            background-color: #f44336;
            color: white;
        }

        .button:hover {
            background-color: #555;
        }

        .add-order-button {
            float: right;
            background-color: gray;
            margin-bottom: 2px;
        }

    </style>
</head>
<body>
    <div class="container">
        <h1>Driver Details</h1>
        <form method="get" asp-controller="Driver" asp-action="AddDriver">
            <button class="button add-order-button" type="submit" style="float: right;">Add Driver</button>
        </form>
        <table>
            <thead>
                <tr>
                    <th>Driver Name</th>
                    <th>Driver Experience</th>
                    <th>Driver License Number</th>
                    <th class="button-column">Actions</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var driver in Model)
                {
                    <tr>
                        <td>@driver.Name</td>
                        <td>@driver.ExperienceinYears</td>
                        <td></td>
                        <td class="button-column">
                            <form asp-controller="Driver" asp-action="UpdateDriver">
                                <input type="hidden" name="DriverId" value="@driver.DriverID" />
                                <button type="submit" class="button update-button">Update</button>
                            </form>
                        </td>
                        <td class="button-column">
                            <form asp-controller="Organization" asp-action="DeleteOrganization">
                                <input type="hidden" name="VehicleId" value="@driver.DriverID" />
                                <button type="submit" class="button delete-button">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
@model ChatViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap"
          rel="stylesheet">
    <title>BackCAPS Logistics</title>
    <style>
        body {
            background-color: #FFF8F7;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .nav-rail {
            justify-content: center;
            width: 80px;
            height: 100vh;
            background-color: #FFF8F7;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

            .nav-rail a {
                color: #4A4A4A;
                font-size: 24px;
                text-decoration: none;
                display: flex;
                flex-direction: column;
                align-items: center;
                margin: 20px 0;
            }

            .nav-rail span.label {
                font-size: 12px;
                font-weight: bold;
                margin-top: 4px;
            }

            .nav-rail a:hover {
                color: #FF6F61;
            }

        .top-nav {
            width: calc(100% - 80px);
            height: 70px;
            background-color: #FFF8F7;
            position: fixed;
            top: 0;
            left: 80px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            z-index: 1000;
        }

        .search-bar {
            display: flex;
            align-items: center;
            flex: 1;
            margin: 0 20px;
        }

            .search-bar input {
                width: 100%;
                padding: 8px 12px;
                border-radius: 31px;
                border: 0;
            }

        .btn,
        .notification-btn {
            background-color: white;
            border-radius: 50px;
            border: none;
            width: 40px;
            height: 40px;
            color: #4A4A4A;
            font-size: 24px;
            margin-right: 20px;
        }

        .notification-btn {
            position: relative;
        }

            .notification-btn::after {
                content: '';
                position: absolute;
                top: -5px;
                right: -5px;
                width: 10px;
                height: 10px;
                background-color: red;
                border-radius: 50%;
            }

        .icon-bg {
            background-color: #FFDAD6;
            width: 50px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            /* Makes the background a pill shape */
            font-size: 24px;
            /* Ensure the icon size fits well within the background */
        }

        .profile {
            display: flex;
            align-items: center;
        }

            .profile img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-left: 10px;
            }

            .profile span {
                font-weight: 500;
            }

        .main-content {
            display: flex;
            gap: 20px;
            padding: 20px;
            margin-left: 80px;
            margin-top: 70px;
        }

        .left-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

            .left-content .list-tile {
                display: flex;
                align-items: center;
                background-color: #FFDAD6;
                padding: 10px;
                border-radius: 19px;
                cursor: pointer;
            }

                .left-content .list-tile img {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    margin-right: 10px;
                }

        .right-content {
            flex: 3;
            display: flex;
            flex-direction: column;
            height: 85vh;
            background-color: #FFFFFF;
            border-radius: 40px;
            padding: 20px;
        }

        .chat-bubble {
            max-width: 70%;
            padding: 20px;
            border-radius: 40px;
            margin-bottom: 10px;
        }

            .chat-bubble.sent {
                background-color: #C00012;
                color: white;
                display: flex;
                justify-content: end;
                align-self: flex-end;
            }

            .chat-bubble.received {
                background-color: #FFDAD6;
                align-self: flex-start;
            }

        .chat-input {
            display: flex;
            margin-top: auto;
        }

            .chat-input input {
                flex: 1;
                padding: 10px;
                border-radius: 40px;
                border: 1px solid #ccc;
            }

            .chat-input button {
                background-color: #C00012;
                border: none;
                padding: 10px 20px;
                margin-left: 10px;
                border-radius: 40px;
                color: white;
            }

        .list-tile {
            display: flex;
            align-items: center;
            background-color: #FFDAD6;
            padding: 10px;
            border-radius: 19px;
            cursor: pointer;
            text-decoration: none;
            color: inherit; /* Inherit color from parent */
        }

            .list-tile img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
            }

            .list-tile span {
                margin-left: 10px;
            }

        #chat-container {
            height: calc(85vh - 80px); /* Adjust this value as needed */
            overflow-y: auto;
            padding-right: 10px; /* Add some padding for the scrollbar */
        }

            /* Optional: Customize the scrollbar appearance */
            #chat-container::-webkit-scrollbar {
                width: 8px;
            }

            #chat-container::-webkit-scrollbar-track {
                background: #f1f1f1;
            }

            #chat-container::-webkit-scrollbar-thumb {
                background: #888;
                border-radius: 4px;
            }

                #chat-container::-webkit-scrollbar-thumb:hover {
                    background: #555;
                }

    </style>
</head>
<body>
    @Html.Partial("_Sidebar")
    <div class="top-nav">
        <div class="search-bar">
            <input type="text" placeholder="Search Fleet">
        </div>
        <button class="notification-btn"><i class="bi bi-bell"></i></button>
        <div class="profile">
            <span>BackCAPS Logistics</span>
            <img src="/Assets/profile.png" alt="Profile Picture">
        </div>
    </div>

    <div class="main-content">
        <div class="left-content">
            @if (Model.Drivers != null && Model.Drivers.Any())
            {
                @foreach (var driver in Model.Drivers)
                {
                    <a asp-controller="Chat" asp-action="ChatView" asp-route-driverId="@driver.DriverID" asp-route-AdminId="@Model.localId" class="list-tile">
                        <img src="/Assets/profile.png" alt="Driver Profile Picture">
                        <span>@driver.Name</span>
                    </a>
                }
            }
            else
            {
                <div class="no-drivers-message">
                    <p>No drivers available.</p>
                </div>
            }
        </div>

                        
        <div class="right-content">
            <div id="chat-container">
                @if (Model.Chats != null && Model.Chats.Count > 0)
                {
                    @foreach (var chat in Model.Chats)
                    {
                        <div class="d-flex @((chat.email == Model.email) ? "justify-content-end" : "justify-content-start")">
                            <div class="chat-bubble @(chat.email == Model.email ? "sent" : "received")">
                                @chat.text
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="d-flex justify-content-start">
                        <div class="chat-bubble received">
                            Select a driver to view the chat.
                        </div>
                    </div>
                }
            </div>
            <div class="chat-input">
                <form asp-controller="Chat" asp-action="SendChat">
                <input type="text" id="chat-input-field" name="text" placeholder="Type a message">
                <input type="hidden" name = "AdminId" value="@Model.localId" />
                <input type="hidden" name = "DriverId" value="@ViewBag.DriverId" />
                <button type="submit"><i class="bi bi-send"></i></button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
